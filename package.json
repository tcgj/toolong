{
  "name": "toolong",
  "version": "1.0.0",
  "description": "Browser redirect search engine",
  "author": "Terence Chong",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "scripts": {
    "build": "yarn clean && yarn copy-files && webpack --mode=production",
    "clean": "rm -rf ./dist/",
    "copy-files": "cp -r ./src/public/ ./dist/",
    "develop": "http-server ./dist/ --port=9000",
    "watch": "webpack --watch --progress --mode=development"
  }
}
